{% extends "base.html.twig" %}

{% block body %}
    <div class="container-fluid">
        <div class="row">
            <div class="col s12 m4">
                {% include 'components/messageFlash.html.twig' %}
                <div class="container_log">
                    <br><br>
                    <div>
                        <p id="msg" style="width: 300px;margin-top: -30px;margin-bottom: 20px">Création de votre compte REPARIZY</p>
                    </div>
                    <div class="login">
                        {{ form_start(form) }}
                        {{ form_widget(form) }}
                        <button class="waves-effect waves-light btn gradient-45deg-reparizy gradient-shadow" style="display: block; margin: auto;">{{ button_label|default('Inscription') }}</button>
                        {{ form_end(form) }}
                    </div>
                    <div class="signin">
                        <p id="msg">
                            Vous avez déjà un compte ?
                            <a id="signin" href="{{ path('user_login') }}">Connectez-vous !</a>
                        </p>
                    </div>
                </div>
            </div>
            <div class="col s12 m8">
                <div class="signup-user-bg">
                    <img src="https://www.sportbuzzbusiness.fr/wp-content/uploads/2017/01/unibet-fier-d%C3%AAtre-sur-Unibet.png">
                </div>
            </div>
        </div>
    </div>
{% endblock %}