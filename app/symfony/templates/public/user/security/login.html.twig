{% extends "base.html.twig" %}

{% block title %} Login {% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row" style="margin: 0px;">
        <div class="col s12 m4" style="padding: 0px">
            {% include 'components/messageFlash.html.twig' %}
            <div class="container_log" style="margin-bottom: 180px !important; ">
                <form class="form-horizontal" action="{{ path('user_login') }}" method="post" style="width: 68%;margin: 0px auto;margin-top: 56px;">
                    {% if error %}
                        <div class="card-panel red accent-2">
                            Votre mot de passe ou adresse mail est incorrect
                        </div>
                    {% endif %}

                    <div>
                        <h3>Connexion</h3>
                    </div>

                    <p class="login">
                        {{ form_start(form, { attr: { class: 'form-login form-auth' } }) }}
                        <div class="form-group form-icon-mail">
                            {{ form_widget(form._username) }}
                        </div>
                        <div class="form-group form-icon-password">
                            {{ form_widget(form._password) }}
                        </div>
                        {{ form_end(form) }}
                    </p>
                    <div class="pw-lost">
                        <p id="pw-lost"><a class="modal-trigger" href="#modal_password_notFound">Mot de passe oubli√© ?</a> </p>
                    </div>
                    <div class="signin">
                        <p id="msg">Vous n'avez pas de compte ? <a id="signin" href="{{ path('register') }}">Inscrivez-vous gratuitement !</a></p>
                    </div>
                </form>
            </div>
        </div>
        <div class="col s12 m8" style="padding: 0px">
            <div class="signup-user-bg">
                <img src="https://www.sportbuzzbusiness.fr/wp-content/uploads/2017/01/unibet-fier-d%C3%AAtre-sur-Unibet.png">
            </div>
        </div>
    </div>

    <!-- Modal Structure -->
    <div id="modal_password_notFound" class="modal bottom-sheet">
        <div class="modal-content">
            <h5>Veuillez entrer votre e-mail d'inscription pour recevoir votre mot de passe</h5><br>
            <div class="row">
                <form class="col s12" action="#" method="post">
                    <div class="row">

                        <div class="input-field col s6">
                            <i class="material-icons prefix">email</i>
                            <input id="icon_telephone" type="email" name="email" class="validate" required>
                            <label for="icon_telephone">Email</label>
                        </div>

                        <div class="input-field col s6">
                                <button type="submit" class="waves-effect waves-light btn gradient-45deg-reparizy gradient-shadow" id="book-mec" >Envoyer</button>
                        </div>

                    </div>
                </form>
            </div>
        </div>
        <div class="modal-footer">
            <a href="#!" class="modal-close waves-effect waves-green btn-flat">close</a>
        </div>
    </div>
</div>
{% endblock %}